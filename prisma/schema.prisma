generator client {
  provider = "prisma-client-js"
}

datasource db {
   provider  = "postgresql"
   url       = env("POSTGRES_PRISMA_URL")
   directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Product {
  id          String  @id @default(cuid())
  ref         String  
  designation String
  image       String
  price       Decimal
  userId      String
  user        User    @relation(fields: [userId], references: [userId])
}

model Company {
  id     String @id @default(cuid())
  nom    String
  ice    String
  adress String
  userId String
  user   User   @relation(fields: [userId], references: [userId])
}

model FacDevBdl {
  id     String @id @default(cuid())
  nom    String
  ice    String
  adress String
}

model UserSettings {
  id                 String @id @default(cuid())
  userComapnyName    String
  userComapnyLogo    String
  userComapnyAdress  String
  userComapnyPhone1  String
  userComapnyPhone2  String
  userComapnyICE     String
  userComapnyIS      String
  userComapnyPatente String
  userComapnyRC      String
  userComapnyEmail   String
  userComapnyCNSS    String
  userId             String
  user               User   @relation(fields: [userId], references: [userId])
}

model FactureInfo {
  id         String @id @default(cuid())
  numFac     String
  dateFac    String
  docType    String
  ice        String
  adress     String
  clientName String
  totalTTC   Decimal
  totalTVA   Decimal
  totalHT    Decimal
  userId     String
  user       User   @relation(fields: [userId], references: [userId])
}

model User {
  userId    String   @id @default(cuid())
  name      String?
  email     String   @unique
  isActive  Boolean  
  password  String
  products  Product[]
  companies Company[]
  settings  UserSettings[]
  factures  FactureInfo[]
}
